#CREATE TABLE iwar
#
#	( timestamp	DATETIME NOT NULL, 
#	  number	BIGINT NOT NULL, 
#	  response	VARCHAR(20), 
#	  ident		VARCHAR(128),
#	  PRIMARY KEY  ( number ));

#
#  The primary key is the number.   This,  of course,  will prevent you
#  from re-entering the same number(s).   Comment the above,   and uncomment
#  the below if this isn't going to work for you.  For most,  it should.

CREATE TABLE iwar

       ( timestamp     DATETIME NOT NULL, 
         number        BIGINT NOT NULL, 
         response      VARCHAR(20), 
         ident         VARCHAR(128), 
	 record        TEXT );


